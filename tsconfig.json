{
  "compilerOptions": {
    "module": "nodenext",
    "moduleDetection": "force",
    "target": "ESNext",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "paths": {
      "@tests/*": ["./tests/*"],
      "@lib/*": ["./lib/*"],
      "@resources/*": ["./resources/*"],
      "@fixtures": ["./fixtures.ts"],
      "@playwright.config": ["./playwright.config.ts"],
      "@testconfig": ["./testConfig.ts"]
    }
  }
}
